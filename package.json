{
  "name": "@fransvilhelm/changeset-changelog",
  "version": "0.0.0",
  "description": "Changeset changelog generator",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/adambrgmn/changeset-changelog.git"
  },
  "author": {
    "name": "Adam Bergman",
    "email": "adam@fransvilhelm.com"
  },
  "homepage": "https://github.com/adambrgmn/changeset-changelog#readme",
  "license": "MIT",
  "keywords": [
    "changeset",
    "changelog"
  ],
  "scripts": {
    "build": "tsc -d src/index.ts --outDir dist",
    "test": "jest",
    "type-check": "tsc --noEmit",
    "release": "yarn build && yarn changeset publish"
  },
  "dependencies": {
    "@changesets/changelog-github": "^0.2.7",
    "@changesets/get-github-info": "^0.4.4",
    "@changesets/types": "^3.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@changesets/cli": "^2.10.2",
    "@types/jest": "^26.0.13",
    "@types/node": "^14.10.1",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.8.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-flowtype": "^4.7.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^2.5.1",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lint-staged": "^10.3.0",
    "prettier": "^2.1.1",
    "typescript": "^4.0.2"
  },
  "bugs": {
    "url": "https://github.com/adambrgmn/changeset-changelog/issues"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ],
    "*.{js,ts,jsx,tsx,json,md,yml,html}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "proseWrap": "always"
  }
}
